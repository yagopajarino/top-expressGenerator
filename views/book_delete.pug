extends layout 

block content 
    h1 #{title}: #{book.title}

    if bookInstances.length 
        p #[strong Delete the following instances before attempting to delete this book.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Book Instances
            dl 
                for bookInst in bookInstances 
                    dt 
                        a(href=bookInst.url) #{book.title}
                    dd Imprint: #{bookInst.imprint}
                    dd Status: #{bookInst.status}
    else
        p Do you really want to delete this book?
        form(method="POST" action="")
            .form-group 
                input#bookid.form-control(type="hidden" name="bookid" value=book._id)
            button.btn.btn-danger(type="submit") Delete
