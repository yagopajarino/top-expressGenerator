extends layout

block content 
    h1= title 

    ul 
        each author in author_list 
            li 
                if author.lifespan != ""
                    a(href=author.url) #{author.name}
                    |    (#{author.lifespan})
                else 
                    a(href=author.url) #{author.name}
                
        else 
            li There are no authors.